---
// src/components/TypingEffect.astro
interface Props {
  texts: string[];
  speed?: number; // Kept for compatibility, but unused
}

const { texts } = Astro.props;

// We show the first text immediately to match the fast View Transitions
const staticText = texts && texts.length > 0 ? texts[0] : "";
---

<span class="typing-effect">
  {staticText}
</span>

<style>
  .typing-effect {
    display: inline-block;
    font-family: monospace; /* Keeps the coding aesthetic */
    white-space: pre-wrap;
    position: relative;
  }

  /* Keeps the "Terminal Cursor" vibe without the typing delay */
  .typing-effect::after {
    content: '|';
    display: inline-block;
    margin-left: 2px;
    color: inherit; /* Matches your text color */
    animation: blink 1.2s step-end infinite;
    opacity: 1;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
</style>